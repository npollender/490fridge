<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_margin="4dp"
        android:text="Edit Quantity"
        android:fontFamily="@font/raleway"
        android:textSize="25dp"
        android:gravity="center"
        android:id="@+id/editSL"
        android:layout_height="match_parent"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="Enter new name here"
        android:fontFamily="@font/raleway"
        android:gravity="center"
        android:id="@+id/newnameSL"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:layout_width="75dp"
            android:fontFamily="@font/raleway"
            android:layout_height="75dp"
            android:id="@+id/edit_sl_minus"
            android:textSize="40dp"
            android:text="-" />

        <TextView
            android:layout_width="match_parent"
            android:fontFamily="@font/raleway"
            android:layout_height="match_parent"
            android:text="0"
            android:textSize="40dp"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="20dp"
            android:id="@+id/edit_sl_txt"/>

        <Button
            android:layout_width="75dp"
            android:fontFamily="@font/raleway"
            android:layout_height="75dp"
            android:id="@+id/edit_sl_plus"
            android:textSize="40dp"
            android:text="+" />
    </LinearLayout>

    <Button
        android:id="@+id/okSLEbtn"
        android:layout_width="355dp"
        android:fontFamily="@font/raleway"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="ok" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/raleway"
        android:text="cancel"
        android:id="@+id/cancelSLEbtn"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"/>
</LinearLayout>