<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:background="@drawable/curved_dialog"
    android:layout_height="wrap_content">

    <TextView
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="10dp"
        android:text="Edit Quantity"
        android:fontFamily="@font/raleway"
        android:textSize="25dp"
        android:textStyle="bold"
        android:gravity="center"
        android:id="@+id/editSL"
        android:layout_height="match_parent"/>

    <EditText
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:hint="Enter new name here"
        android:layout_gravity="center"
        android:fontFamily="@font/raleway"
        android:gravity="center"
        android:id="@+id/newnameSL"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:layout_width="60dp"
            android:fontFamily="@font/raleway"
            android:background="@drawable/simple_button"
            android:foreground="@drawable/button_ripple"
            android:layout_height="60dp"
            android:id="@+id/edit_sl_minus"
            android:textSize="40dp"
            android:text="-" />

        <TextView
            android:layout_width="50dp"
            android:fontFamily="@font/raleway"
            android:layout_height="85dp"
            android:text="0"
            android:textSize="40dp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="20dp"
            android:id="@+id/edit_sl_txt"/>

        <Button
            android:layout_width="60dp"
            android:fontFamily="@font/raleway"
            android:foreground="@drawable/button_ripple"
            android:background="@drawable/simple_button"
            android:layout_height="60dp"
            android:id="@+id/edit_sl_plus"
            android:textSize="40dp"
            android:text="+" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/okSLEbtn"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_gravity="top"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="10dp"
            android:textSize="20sp"
            android:background="@drawable/simple_button"
            android:fontFamily="@font/raleway"
            android:text="ok" />

        <Button
            android:id="@+id/cancelSLEbtn"
            android:textSize="20sp"
            android:layout_width="120dp"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="10dp"
            android:layout_height="50dp"
            android:layout_gravity="top"
            android:background="@drawable/simple_button"
            android:fontFamily="@font/raleway"
            android:text="cancel" />

    </LinearLayout>
</LinearLayout>