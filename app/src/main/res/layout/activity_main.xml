<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/settings_fp"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:clickable="true"
        app:backgroundTint="#00BCD4"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/ic_menu_manage" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/usftext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway"
            android:layout_marginVertical="10dp"
            android:text="GYN Smart Fridge"
            android:textSize="36sp" />

        <Button
            android:id="@+id/invbtn"
            android:layout_width="250dp"
            android:layout_height="75dp"
            android:fontFamily="@font/raleway"
            android:layout_marginVertical="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/button_style"
            android:foreground="@drawable/button_ripple"
            android:drawableLeft="@drawable/basket_alt_32"
            android:paddingLeft="15dp"
            android:text="Inventory"
            android:textSize="30sp" />

        <Button
            android:id="@+id/cambtn"
            android:layout_width="250dp"
            android:layout_height="75dp"
            android:fontFamily="@font/raleway"
            android:layout_marginVertical="10dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/button_style"
            android:foreground="@drawable/button_ripple"
            android:drawableLeft="@drawable/interior_32"
            android:paddingLeft="15dp"
            android:text="Interior"
            android:textSize="30sp" />

        <Button
            android:id="@+id/listbtn"
            android:layout_width="250dp"
            android:layout_height="75dp"
            android:fontFamily="@font/raleway"
            android:layout_marginVertical="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/button_style"
            android:foreground="@drawable/button_ripple"
            android:drawableLeft="@drawable/cart_32"
            android:paddingLeft="12dp"
            android:text="Shopping List"
            android:textSize="25sp" />

        <Button
            android:id="@+id/recipebtn"
            android:layout_width="250dp"
            android:layout_height="75dp"
            android:fontFamily="@font/raleway"
            android:layout_marginVertical="10dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/button_style"
            android:foreground="@drawable/button_ripple"
            android:drawableLeft="@drawable/recipe"
            android:paddingLeft="15dp"
            android:text="Recipes"
            android:textSize="30sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>