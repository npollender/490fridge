<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:textColor="#000000"
        android:layout_width="300dp"
        android:layout_margin="4dp"
        android:text="The following items are low. Add to list?"
        android:textSize="25dp"
        android:gravity="center"
        android:id="@+id/lowinvtxt"
        android:layout_height="match_parent"/>

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Partition A"
        android:textSize="20dp"
        android:id="@+id/cbA"/>

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Partition B"
        android:textSize="20dp"
        android:id="@+id/cbB"/>

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Partition C"
        android:textSize="20dp"
        android:id="@+id/cbC"/>

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Partition D"
        android:textSize="20dp"
        android:id="@+id/cbD"/>

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Partition E"
        android:textSize="20dp"
        android:id="@+id/cbE"/>

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Partition F"
        android:textSize="20dp"
        android:id="@+id/cbF"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/addinvbtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Confirm"
            android:textSize="20dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="cancel"
            android:id="@+id/naddinvbtn"
            android:textSize="20dp"/>
    </LinearLayout>

</LinearLayout>