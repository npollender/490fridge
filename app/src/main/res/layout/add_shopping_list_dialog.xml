<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:gravity="center_horizontal"
    android:background="@drawable/curved_dialog"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Enter new shopping list item"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="5dp"
        android:textSize="23sp"
        android:textStyle="bold"
        android:fontFamily="@font/raleway"
        android:id="@+id/sl_txt"
        android:textColor="#000000"/>

    <EditText
        android:layout_width="250dp"
        android:layout_margin="4dp"
        android:textSize="20sp"
        android:hint="Item Name"
        android:id="@+id/iname"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:fontFamily="@font/raleway"
            android:foreground="@drawable/button_ripple"
            android:background="@drawable/circular_button"
            android:id="@+id/add_sl_minus"
            android:textSize="40dp"
            android:text="-" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="85dp"
            android:text="0"
            android:textAlignment="center"
            android:fontFamily="@font/raleway"
            android:textColor="#000000"
            android:textSize="40dp"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="10dp"
            android:id="@+id/new_sl_qty"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/add_sl_plus"
            android:background="@drawable/circular_button"
            android:fontFamily="@font/raleway"
            android:foreground="@drawable/button_ripple"
            android:textSize="40dp"
            android:text="+" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/okbtn"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:textColor="#000000"
            android:background="@drawable/simple_button"
            android:fontFamily="@font/raleway"
            android:text="OK" />
        <Button
            android:id="@+id/cancelbtn"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_margin="10dp"
            android:background="@drawable/simple_button"
            android:fontFamily="@font/raleway"
            android:text="Cancel" />


    </LinearLayout>

</LinearLayout>